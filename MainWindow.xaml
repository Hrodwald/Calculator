        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculatrice"
        Height="414" 
        MinHeight="400"
        MinWidth="570"
        Width="657" 
        Background="DarkGray"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" 
        KeyDown="OnKeyDownHandler"
